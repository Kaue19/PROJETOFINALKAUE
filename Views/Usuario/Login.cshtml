@model ProjetoFinalKaue.Models.Usuario
<link rel="stylesheet" href="/css/Login.css" />
@{
    Layout = null;
}
<div class="text-center">
    <form asp-action="Login">
        <img class="Caxinha2" src="~/Img/cropped-LOGO-SETEMED-1-1.png" />
        <div class="Caxinha">
            <Label class="Labels" asp-for="Email"></Label>
            <input class="Inputs" asp-for=" Email" placeholder="Ex: Sergioflores@gmail.com"/>
            <span style="display:block; position:absolute; margin-left:100px;" asp-validation-for="Email"></span>
        </div>
        <div style="margin-top:35px;" class="Caxinha">
            <Label class="Labels" asp-for="Senha"></Label>
            <input class="Inputs" asp-for="Senha" type="password" placeholder="Ex: 35412@b61" />
            <span style="display:block; position:absolute; margin-left:100px;" asp-validation-for="Senha"></span>
        </div>
        <br />
        <br />
        <div class="Caxinha">
            <input class="Caxinha3" type="submit" value="Entrar" />
        </div>
        <br />
        <h4 style="margin-left:90px; margin-top:30px;color:red;">@ViewBag.Mensagem</h4>
    </form>
</div>